<Window x:Class="PromtWPF.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="450" Width="500">
    <StackPanel Margin="10">
        <Label Content="Имя пользователя:" Height="66" FontSize="36" />
        <TextBox x:Name="UsernameTextBox" Height="54" FontSize="24" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Пароль:" Height="58" FontSize="36" />
        <PasswordBox x:Name="PasswordBox" FontSize="36" Height="64" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button Content="Войти" Margin="10" Click="LoginButton_Click" Height="58" Width="416" FontSize="36" />
        <Button Content="Регистрация" Click="RegisterButton_Click" Width="412" Height="55" FontSize="36"/>
    </StackPanel>
</Window>