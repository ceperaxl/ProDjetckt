<Window x:Class="PromtWPF.View.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать товар" Height="420" Width="400">
    <StackPanel Margin="10">
        <Label Content="Название:" Height="52" FontSize="24" />
        <TextBox x:Name="NameTextBox" Height="45" FontSize="22" />
        <Label Content="Описание:" Height="50" FontSize="24" />
        <TextBox x:Name="DescriptionTextBox" Height="42" FontSize="22" />
        <Label Content="Цена:" Height="44" FontSize="24" />
        <TextBox x:Name="PriceTextBox" Height="48" FontSize="22" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Click="SaveButton_Click" Width="166" Margin="5,0" Height="61" FontSize="24" />
            <Button Content="Отмена" IsCancel="True" Width="108" Margin="5,0" FontSize="24" />
        </StackPanel>
    </StackPanel>
</Window>