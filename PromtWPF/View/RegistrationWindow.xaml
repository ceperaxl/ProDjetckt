<Window x:Class="PromtWPF.View.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="540" Width="500">
    <StackPanel Margin="10">
        <Label Content="Имя пользователя:" Height="37" FontSize="22" />
        <TextBox x:Name="UsernameTextBox" Height="45" FontSize="20" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Пароль:" Height="52" FontSize="22" />
        <PasswordBox x:Name="PasswordBox" FontSize="22" Height="43" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="Роль:" Height="63" FontSize="24" />
        <ComboBox x:Name="RoleComboBox" Height="62" FontSize="22" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <ComboBoxItem Content="Admin" Tag="1"/>
            <ComboBoxItem Content="Manager" Tag="2"/>
        </ComboBox>
        <Button Content="Зарегистрироваться" Margin="10" Click="RegisterButton_Click" Width="428" Height="77" FontSize="36" />
        <Button Content="Войти" Click="LoginButton_Click" Width="429" Height="77" FontSize="36"/>
    </StackPanel>
</Window>